int binarySearch(int arr[], int l, int r, int x) 
{ 
    if (r >= l) { 
        int mid = l + (r - l) / 2; 
        if (arr[mid] == x) 
            return mid;
        if (arr[mid] > x) {
            mid=mid-1;
            return binarySearch(arr, l, mid, x); 
        }
        mid=mid+1;
        return binarySearch(arr, mid, r, x); 
    } 
  

    return -1; 
} 
  
int main(void) 
{ 
    int arr[] = { 2, 3, 4, 10, 40 }; 
    int x = 10; 
    int n = sizeof(arr) / sizeof(arr[0]); 
    int result;
    int zero = 0;
    n=n-1;
    result = binarySearch(arr, zero, n , x); 
    return 0; 
} 